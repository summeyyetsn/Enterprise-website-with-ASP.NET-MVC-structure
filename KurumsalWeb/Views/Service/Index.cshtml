@model IEnumerable<KurumsalWeb.Models.Model.Service>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Service</h2>

<a class="btn btn-outline-dark" href="/Service/Create">Create New Service</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Service ID</th>
            <th scope="col">Title</th>
            <th scope="col">Explanation</th>
            <th scope="col">Image URL</th>
            <th scope="col">Process</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ServiceId</td>
                <td>@item.ServiceTitle</td>
                <td>@Html.Raw(item.ServiceExplanation)</td>
                <td><img width="100" height="100" src="@item.ImageURL" /></td>
                <td>
                <a href="/Service/Edit/@item.ServiceId">Edit</a> |
                <a href="/Service/Delete/@item.ServiceId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>